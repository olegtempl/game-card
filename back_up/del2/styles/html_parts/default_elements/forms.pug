                input#radio2(name='radio', type='radio', value='')
                label(for='radio2') Radio button 2
            .radio
                input#radio3(name='radio', type='radio', value='')
                label(for='radio3') Radio button 3
        .col-xs-6.col-md-3
            h3.text-sm.text-gray Checkboxes
            .checkbox
                input#checkbox1(name='keywords', type='checkbox', value='')
                label(for='checkbox1') Checkbox 1
            .checkbox
                input#checkbox2(name='keywords', type='checkbox', value='')
                label(for='checkbox2') Checkbox 2
            .checkbox
                input#checkbox3(name='keywords', type='checkbox', value='')
                label(for='checkbox3') Checkbox 3
