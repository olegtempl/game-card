section.section
    h2.text-md  Forms
    .row
        .col-xs-12.col-md-6
            label.label(for='name') Name
            .input
                input#name(placeholder='Name', type='text')
        .col-xs-12.col-md-6
            label.label(for='name_error') Name
            .input.error
                input#name_error(placeholder='Name', type='text')
            p.text-error.text-xs $error message
    .row
        .col-xs-12.col-md-6
            label.label(for='address') Address
            .input.full-width
                input#address(placeholder='Address', type='text')
        .col-xs-12.col-md-6
            label.label(for='address_error') Address
            .input.error.full-width
                input#address_error(placeholder='Address', type='text')
            p.text-error.text-xs $error message
    .row
        .col-xs-12.col-md-6
            label.label(for='country-code') Country
            .select.full-width
                select#country-code(name='country-code')
                    option Afghanistan
                    option Albania
                    option Algeria
                    option American Samoa
                    option Andorra
                    option Angola
                i.fa.fa-angle-down.fa-2
        .col-xs-12.col-md-6
            label.label(for='country-code-error') Country
            .select.full-width.error
                select#country-code-error(name='country-code-error')
                    option Afghanistan
                    option Albania
                    option Algeria
                    option American Samoa
                    option Andorra
                    option Angola
                i.fa.fa-angle-down.fa-2
            p.text-error.text-xs $error message
    .row
        .col-xs-12.col-md-6
            label.label(for='message') Message
            textarea#message.textarea
        .col-xs-12.col-md-6
            label.label(for='message-error') Message
            textarea#message-error.textarea.error
            p.text-error.text-xs $error message
    .row
        .col-xs-6.col-md-3
            h3.text-sm.text-gray Radio buttons
            .radio
                input#radio1(name='radio', type='radio', value='')
